---
const { year, header, header2, description, place } = Astro.props;
---

<div class="bg-white border-[1px] border-blueDarkColor rounded-[30px] p-4 w-[180px] h-[100px]
md:rounded-[50px] md:p-4 md:w-[280px] md:h-[220px]
lg:rounded-[130px] lg:p-8 lg:w-[510px] lg:h-[328px]">
  <p class="text-p_s md:text-p_m lg:text-p text-center">{year}</p>
  <p class="text-p_s_mini md:text-p_m_mini lg:text-p_mini text-center pt-2 lg:pt-0">{header}</p>
  <p class="text-p_s_mini md:text-p_m_mini lg:text-p_mini text-center">{header2}</p>
  <p class="text-p_s_mini md:text-p_m_mini lg:text-p_mini text-left text-gray-400 pt-3 hidden md:block lg:pt-8">{description}</p>
  <p class="text-p_s_mini md:text-p_m_mini lg:text-p_mini text-center text-gray-400 pt-5 hidden md:block">{place}</p>
</div>
