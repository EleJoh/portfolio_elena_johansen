  <style>
    @keyframes scrollLineEffect {
      0% {
        transform: translateY(-100%);
      }
      50% {
        transform: translateY(0);
      }
      100% {
        transform: translateY(100%);
      }
    }

    .line {
      position: relative;
      overflow: hidden;
    }
    .scroll-effect {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(228, 228, 224, 1);
      animation: scrollLineEffect 3s linear infinite;
    }

    .letter {
      will-change: transform;
      cursor: default;

      display: inline-block;
      transition: transform 0.2s ease;
      letter-spacing: 0;
    }

    .letter:hover {
      transform: scaleX(0.8) scaleY(1.2);
    }

    #horisontalliste > li {
      width: 100vw; /* Same width for all items */
      flex: 0 0 auto; /* Prevents flex shrinking/growing */
      display: flex;
      flex-direction: column;
      align-items: left;
      justify-content: space-between;
      height: 500px; /* Set a fixed height */
    }

    /* Set consistent video sizes */
    #horisontalliste video {
      width: 600px; /* Uniform width */
      height: 300px; /* Uniform height */
      object-fit: cover; /* Ensures proper scaling */
    }

    #img_size img {
      width: 600px; /* Match video width */
      height: 300px; /* Match video height */
      object-fit: cover; /* Ensures proper scaling */
    }

    /* Adjust figure to align videos properly */
    figure {
      display: flex;
      gap: 1rem; /* Space between videos */
      justify-content: center;
      align-items: center;
    }

    .video-container {
      transition:
        transform 0.3s ease,
        outline 0.3s ease; /* Smooth scaling and outline transition */
    }

    .video-container:hover {
